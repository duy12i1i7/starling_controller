#!/usr/bin/env bash

export STARLING_COMMON_SOURCED=true

# Useful Environment Variables

export STARLING_BINDIR=${STARLING_BINDIR:-}
export STARLING_WORKDIR=${STARLING_WORKDIR:-}
export STARLING_CLI_DIR="$STARLING_WORKDIR/cli"
export STARLING_COMMANDS_DIR="$STARLING_CLI_DIR/commands"
export STARLING_TMP_DIR="${STARLING_WORKDIR}/tmp"
export STARLING_CONFIG_DIR="${STARLING_WORKDIR}/config"

# Kuberenetes Setup
export STARLING_KUBE_CONFIG_DIR=~/.kube
export STARLING_KUBE_CONFIG_FILE_PATH=$STARLING_KUBE_CONFIG_DIR/config/k3s.yaml

# LOCAL REGISTRY DEFAULTS
export STARLING_REGISTRY_NAME='kind-registry'
export STARLING_REGISTRY_DEFAULT_PORT='5001'
